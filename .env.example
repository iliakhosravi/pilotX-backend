# Example environment variables for Pilot X Backend
# Copy this file to .env for local development

# Database Configuration
MONGO_URI=mongodb://localhost:27017/piloX
MONGO_ROOT_USERNAME=
MONGO_ROOT_PASSWORD=

# Redis Configuration  
REDIS_URL=redis://localhost:6379
REDIS_PASSWORD=redis123

# RabbitMQ Configuration
RABBITMQ_URL=
RABBITMQ_USERNAME=
RABBITMQ_PASSWORD=
ORDERS_QUEUE=orders_import_queue

# Application Configuration
NODE_ENV=development
PORT=3000
DEBUG=pilotx:*

# API Rate Limiting
API_RATE_LIMIT=

# Batch Processing Configuration
MAX_BATCH_SIZE=
MAX_BATCH_TIME_MS=


# External API Keys (for e-commerce integrations)
SHOPIFY_API_KEY=your-shopify-api-key
SHOPIFY_API_SECRET=your-shopify-api-secret
WOOCOMMERCE_API_KEY=your-woocommerce-api-key
WOOCOMMERCE_API_SECRET=your-woocommerce-api-secret